<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dm_5"
    android:gravity="center_vertical"

    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:innerRadius="0dp"
        android:backgroundTint="@color/app_bg"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="5dp">
    <LinearLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">



                <ImageView
                    android:id="@+id/compliantPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_250"
                    android:layout_alignParentTop="true"
                   android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/placeholder" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="@dimen/dm_10"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtProblem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_alignParentStart="true"
                    android:text="Address"
                    android:textSize="@dimen/dm_17" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_alignParentEnd="true"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dm_15"
                    android:visibility="visible" />
            </RelativeLayout>


            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="2dp"
                android:text="Customer Name"
                android:textSize="@dimen/dm_17" />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="2dp"
                android:textColor="@color/colorAccent"
                android:text="Customer Name"
                android:textSize="@dimen/dm_17" />

        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>